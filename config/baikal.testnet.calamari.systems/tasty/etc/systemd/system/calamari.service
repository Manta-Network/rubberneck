[Unit]
Description=calamari
Wants=network-online.target
After=network-online.target

[Service]
User=root
Group=root
Type=simple
ExecStart=/usr/local/bin/calamari \
    --collator \
    --name tasty-calamari-testnet-baikal \
    --base-path /var/lib/calamari \
    --chain /usr/share/calamari/calamari-parachain-spec.json \
    --port 30333 \
    --ws-port 9944 \
    --rpc-port 9933 \
    --rpc-cors all \
    --node-key-file /usr/share/calamari/node-key --rpc-methods safe --bootnodes /dns/crispy.baikal.testnet.calamari.systems/tcp/30333/p2p/12D3KooWJmAKnfURy45a3XVUgofDisa8o9XsFND8qdA4L7xQZqJr /dns/crunchy.baikal.testnet.calamari.systems/tcp/30333/p2p/12D3KooWD2bfmEk43N16JCbTtdXgWfLejMiekuZq4TFEQC3PDCkV /dns/hotdog.baikal.testnet.calamari.systems/tcp/30333/p2p/12D3KooWLp4Vfh4dF4DMynPWDoQdMYyJ8shDSmHSnLdJf2s2dDC8 /dns/tender.baikal.testnet.calamari.systems/tcp/30333/p2p/12D3KooWJjRusQzpwN6hd6LeXRhCRPWA1RoisJuY1CVwP7V1diuz \
    -- \
    --chain /usr/share/calamari/relaychain-spec.json  
Restart=always
RestartSec=120
StandardOutput=file:/var/log/calamari/stdout.log
StandardError=file:/var/log/calamari/stderr.log

[Install]
WantedBy=multi-user.target
