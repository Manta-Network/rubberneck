[Unit]
Description=moonriver
Wants=network-online.target
After=network-online.target

[Service]
User=root
Group=root
Type=simple
ExecStart=/usr/local/bin/moonriver \
    --collator \
    --alice \
    --name alith \
    --base-path /var/lib/moonriver \
    --chain /usr/share/moonriver/moonriver-parachain-spec.json \
    --port 30333 \
    --ws-port 9944 \
    --rpc-port 9933 \
    --rpc-cors all \
    --state-cache-size 0 \
    --rpc-methods safe \
    --telemetry-url 'wss://api.telemetry.pelagos.systems/submit/ 0' \
    -- \
    --name alith \
    --chain /usr/share/moonriver/relaychain-spec.json \
    --telemetry-url 'wss://api.telemetry.pelagos.systems/submit/ 0'
Restart=always
RestartSec=120

[Install]
WantedBy=multi-user.target
