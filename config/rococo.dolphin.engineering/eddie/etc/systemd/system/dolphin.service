[Unit]
Description=dolphin
Wants=network-online.target
After=network-online.target

[Service]
User=root
Group=root
Type=simple
ExecStart=/usr/bin/dolphin \
    --collator \
    --name '🐬🛡️ eddie 🛡️🐬' \
    --base-path /var/lib/dolphin \
    --chain /usr/share/substrate/dolphin.json \
    --port 30333 \
    --ws-port 9144 \
    --ws-max-connections 1000 \
    --rpc-port 9133 \
    --rpc-cors all \
    --rpc-methods safe \
    --state-cache-size 0 \
    --node-key-file /usr/share/dolphin/node-key \
    -- \
    --name '🐬🛡️ eddie 🛡️🐬' \
    --chain rococo \
    --telemetry-url 'wss://api.telemetry.manta.systems/submit/ 0'
Restart=always
RestartSec=120

[Install]
WantedBy=multi-user.target
