[Unit]
Description=karura
Wants=network-online.target
After=network-online.target
StartLimitIntervalSec=60
StartLimitBurst=3

[Service]
User=root
Group=root
Type=simple
Restart=on-failure
ExecStart=/usr/local/bin/karura \
    --pruning archive \
    --alice \
    --name c2 \
    --base-path /var/lib/karura \
    --node-key-file /usr/share/karura/node-key \
    --chain /usr/share/karura/parachain-spec.json \
    --port 30333 \
    --ws-port 9944 \
    --ws-max-connections 1000 \
    --rpc-port 9933 \
    --rpc-cors all \
    --state-cache-size 0 \
    --rpc-methods safe \
    --telemetry-url 'wss://api.telemetry.pelagos.systems/submit/ 0' \
    -- \
    --name 'c2 karura seabird' \
    --chain /usr/share/karura/relaychain-spec.json \
    --telemetry-url 'wss://api.telemetry.pelagos.systems/submit/ 0'
Restart=always
RestartSec=120

[Install]
WantedBy=multi-user.target
