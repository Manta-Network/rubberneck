[Unit]
Description=manta
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
ExecStart=/usr/local/bin/manta \
    --name '🛡️ c2 🛡️' \
    --base-path /var/lib/substrate \
    --node-key-file /usr/share/manta/node-key \
    --chain /usr/share/manta/parachain-spec.json \
    --port 30433 \
    --ws-port 7944 \
    --rpc-port 7933 \
    --rpc-cors all \
    --rpc-methods safe \
    --collator \
    --pruning archive \
    --prometheus-port 9715 \
    --log=parachain::collation-generation=debug,cumulus-collator=debug,filtering-consensus=debug \
    --telemetry-url 'wss://api.telemetry.pelagos.systems/submit/ 0' \
    -- \
    --name '🛡️ c2 manta 🛡️' \
    --chain /usr/share/manta/relaychain-spec.json \
    --ws-port 7945 \
    --rpc-port 7934 \
    --prometheus-port 9716 \
    --telemetry-url 'wss://api.telemetry.pelagos.systems/submit/ 0'
User=substrate
Group=substrate
Restart=always
RestartSec=120

[Install]
WantedBy=multi-user.target
